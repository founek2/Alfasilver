-var section = $i18n.pages.instructions
h2.desktop-align-center-1024.margin-bottom-24.font-weight-bold.color-blue200 !{section.header}
p= section.description 

div.grid-properties.tips--container.grid-properties--collapse
    //- each tip in section.tips
    //-     if tip == section.tips[0]
    //-         div.tip.active
    //-             h3.font-weight-bold= tip.header
    //-             h6= tip.subheader
    //-             p=tip.description
    //-     else
    //-         div.tip
    //-             h3.font-weight-bold= tip.header
    //-             h6= tip.subheader
    //-             p=tip.description
    div.desktop-col-6
        div.property.property--arrow.active(data-image=section.tips[0].image)
            div.grid-inner
                h3.font-weight-bold= section.tips[0].header
                h6= section.tips[0].subheader
                p 
                    - var descriptions = section.tips[0].descriptions
                    each idx in Object.keys(descriptions)
                        | !{descriptions[idx]}
                        if idx < section.tips[0].descriptions.length - 1
                            br
                            br

        div.image-instructions.mobile-only
            img.img-fluid(src=section.tips[0].image alt=section.tips[0].header)
        div.property.property--arrow(data-image=section.tips[1].image)
            div.grid-inner
                h3.font-weight-bold= section.tips[1].header
                h6= section.tips[1].subheader
            
                p 
                    - var descriptions = section.tips[1].descriptions
                    each idx in Object.keys(descriptions)
                        | !{descriptions[idx]}
                        if idx < section.tips[0].descriptions.length - 1
                            br
                            br
    div.desktop-col-6
        div.image-instructions.desktop-only-1024
            img.img-fluid(src=section.tips[0].image alt=section.tips[0].header)