            h3= technologies.header
            div.techContainer--images
                <div class="tech--images items3">
                    <img src="images/flutter@2x.png" alt="Flutter">
                    <img src="images/android@2x.png" alt="Android">
                    <img src="images/ios@2x.png" alt="iOS">
                </div>
                <div class="tech--images items4">
                    <img src="images/bloc@2x.png" alt="Bloc">
                    <img src="images/firebase@2x.png" alt="Firebase">
                    <img src="images/googleplay@2x.png" alt="Google play">
                    <img src="images/appstore@2x.png" alt="App store">
                </div>
